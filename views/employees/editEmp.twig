<head>
	<link rel='stylesheet' href='/stylesheets/add_personnel.css'/>
	<script src='/javascripts/add_personnel.js'></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
{% block body %}
	<div class="row  flex-nowrap">
		<div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0">
			{% embed 'admin/dashboard.twig' %}{% endembed %}
		</div>
		<div class="col py-3">
			{% if not (message == "null") %}
				<div class="{{alertClass}}" role="alert">
					{{message}}
				</div>
			{% endif %}
			<div class="container">
				<table class="table table-striped table-striped">
					{% if (data) %}
						<form method="post">
							<tr>
								<td>Cin</td>
								<td><input name="cin" value={{data.cin}}/></td>
							</tr>
							<tr>
								<td>First name</td>
								<td><input name="nom" value={{ data.nom}}/></td>
							</tr>
							<tr>
								<td>last name</td>
								<td><input name="prenom" value={{ data.prenom}}/></td>
							</tr>
							<tr>
								<td>Phone number</td>
								<td><input name="telephone" value={{ data.telephone}}/></td>
							</tr>
							<tr>
								<td>Function</td>
								<td>
									<select class="form-control" name="id_role">
										<option class="hidden" selected disabled>Please select the role</option>

										{% for role in roles %}
											<option class="hidden" value={{role.id_role}}>{{role.title}}</option>
										{% endfor %}
									</select>
								</td>
							</tr>
							<tr>
								<td>Gender</td>
								<td>
									<select class="form-control" name="id_role" value={{data.sexe}}>
										<option selected disabled>
											Please select the gender
										</option>
										<option selected value="F">
											Female
										</option>
										<option selected value="M">
											Male
										</option>
									</td>
								</td>
							</tr>
							<tr>
								<td>password:</td>
								<td><input name="password" value={{ data.password}} type="password"/></td>
							</tr>
							<tr>
								<td>Confirm Password:</td>
								<td><input name="confirmPassword" value="" type="password"/></td>
							</tr>
							<tr>
								<td></td>
								<td>
									<input type="submit" class="btn btn-success" name="Submit" value="Save"/>
									<button type="reset" class="btn btn-dark" value="Reset">
										Reset
									</button>
								</td>
							</tr>
						</form>
					</table>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
