<div class="container">
<h3><a class="btn btn-secondary btn btn-sm" href="/employees/add"><i class="fa fa-plus"></i> Add employee</a></h3>
<table class="table table-striped">
    <thead>
        <tr class="table_row">
            <th>Cin </th>
            <th>First name</th>
            <th>Last name</th>
            <th>Role</th>
            <th>Telephone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    <tr id="navigation">
        {% for item in data %}
            <td>{{ item.cin}}</td>
            <td>{{ item.nom}}</td>
            <td>{{ item.prenom}}</td>
            <td>{{ item.id_role}}</td>
            <td>{{ item.telephone}}</td>
            <td>
          <a class="btn btn-info btn-sm" href="/employees/show/{{item.cin}}"> Consult</a>
           <a  class="btn btn-success btn-just-icon btn-sm" href="/employees/edit/{{item.cin}}">
            <i class="material-icons">edit</i>
          </a>
         <a type="button" class="btn btn-danger btn-just-icon btn-sm" href="/employees/delete/{{item.cin}}">
            <i class="material-icons">remove</i>
            </a>
           </td>
        </tr>
        {% endfor %}
          </tbody>
</table>
