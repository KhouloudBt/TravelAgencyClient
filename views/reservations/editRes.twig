<head>
    <link rel='stylesheet' href='/stylesheets/showEmp.css' />
    <link rel="stylesheet" href="/css/bootstrap.min.css">

</head>
{% block body %}
    <div class="row  flex-nowrap">
    <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0">
        {% embed 'admin/dashboard.twig' %}
        {% endembed %}
    </div>
    <div class="col py-3">


        <div class="container">
            <form method="post" name="formE" >

                <div class="mb-3">
                    <label for="nbPlaces" class="form-label"> number of places </label>
                    <input type="text" class="form-control" name="nbPlaces" id="nbPlaces" value={{ data.nbPlaces}} />
                </div>
                <div class="mb-3">
                    <label for="clientId" class="form-label"> client Ref </label>
                    <input type="text" class="form-control" name="clientId" id="clientId" value={{data.clientId}} />
                </div>
                <div class="mb-3">
                    <label for="voyageId" class="form-label"> voyage Ref </label>
                    <input type="text" class="form-control" name="voyageId" id="voyageId" value={{ data.voyageId}} />
                </div>
                <div class="mb-3">
                    <label for="dateRes" class="form-label">reservation Date</label>
                    <input type="datetime-local" class="form-control" value={{ data.dateRes|date("Y-m-d")}}T{{ data.dateRes|date("h:m")}}
                          name="dateRes" id="dateRes"  />

                </div>
                <div class="mb-3">
                    <label for="dateDebut" class="form-label"> start Date </label>
                    <input type="datetime-local" class="form-control" value={{ data.dateDebut|date("Y-m-d")}}T{{ data.dateRes|date("h:m")}}
                           name="dateDebut" id="dateDebut"  />
                </div>
                <div class="mb-3">
                    <label for="dateFin" class="form-label"> end Date </label>
                    <input type="datetime-local" class="form-control" value={{ data.dateFin|date("Y-m-d")}}T{{ data.dateRes|date("h:m")}}
                           name="dateFin" id="dateFin"  />
                </div>

                <div class="  mb-3">
                    <label for="confirmation" class="form-label"> confirmation:    {{ data.confirmation }}</label>
                    <!--input type="text" class="form-control" name="stat" id="stat"  /-->
                    <select class="form-select" id="inputGroupSelect01" name="confirmation">
                        <option value="progress">progress</option>
                        <option value="confirmed">confirmed</option>
                        <option value="cancelled">cancelled</option>
                    </select>
                </div>
                <div class="  mb-3">
                    <input type="submit" class="btn btn-success" name="submit" value="update" />
                </div>
                <div class="  mb-3">
                    <input type="reset" class="btn btn-primary" name="reset" value="reset" />
                </div>

            </form>

        </div>


        <script src="/js/jquery.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src ='/javascripts/add_personnel.js'> </script>
    </div>


{% endblock %}